{% extends "::base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{% if app.user %}Gebruiker {{ app.user.name }}{% else %} Oh-oh! {% endif %} | Coach{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div style="min-height: 946px;" class="content-wrapper">
            <section class="content">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <div class="box">
                            <div class="box-header with-border">
                                <h3 class="box-title">Gebruiker zoeken</h3>
                            </div>
                            <div class="box-body">
                                {% for msg in app.session.flashbag.get('error') %}
                                    {{ msg }}
                                {% endfor %}
                                {% if form %}
                                    {{ form_start(form) }}
                                    {{ form_errors(form) }}

                                    {{ form_end(form) }}
                                {% else %}
                                    <p>Er is helaas iets fout gelopen. Keer terug naar <a href={{ path('admin') }}>home</a>.</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
