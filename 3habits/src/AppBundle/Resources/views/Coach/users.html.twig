{% extends "::base.html.twig" %}

{% block title %}Gebruikers overzicht | Coach{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div style="min-height: 946px;" class="content-wrapper">
            <section class="content-header">
                <h2>Gebruikers</h2>
            </section>
            <section class="content">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        {% if users %}
                            <div class="box">
                                <div class="box-header with-border">
                                    <h3 class="box-title">Alle Gebruikers</h3>
                                </div>
                                <div class="box-body">
                                    <table id="users" class="table table-bordered table-striped">
                                        <thead>
                                        <tr>
                                            <th>Naam</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for u in users %}
                                            <tr>
                                                <td>
                                                    <a href="/coach/users/{{ u.id }}">{{ u.name|e }}</a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        {% else %}
                            <pre>Geen gebruikers gevonden.</pre>
                        {% endif %}
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
