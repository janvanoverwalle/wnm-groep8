{% extends "::base.html.twig" %}

{% block title %}Index | Coach{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div style="min-height: 946px;" class="content-wrapper">
            <section class="content-header">
                <h2>Welkom {{ app.user.username }}</h2>
            </section>
            <section class="content">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <div class="box">
                            <div class="box-header with-border">
                                <h3 class="box-title">Acties</h3>
                            </div>
                            <div class="box-body">
                                {% if notices %}
                                    <div>
                                        {% for n in notices %}
                                            <pre>{{ n }}</pre>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                
                                <p>Een overzicht van alle <a href={{ path('coach-user-list') }}>gebruikers</a>.</p>

                                <p>Zoeken naar een <a href={{ path('coach-user-search') }}>gebruiker</a>.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
