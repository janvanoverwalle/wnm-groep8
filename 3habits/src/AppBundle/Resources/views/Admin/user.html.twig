{% extends "::base.html.twig" %}

{% block title %}Gebruiker {% if user %} {{ user.name }} {% else %} niet gekend {% endif %} | Administrator{% endblock %}

{% block body %}
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div style="min-height: 946px;" class="content-wrapper">
            <section class="content">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <div class="box">
                            <div class="box-header with-border">
                                <h3 class="box-title">Gebruiker aanpassen</h3>
                            </div>
                            <div class="box-body">
                                {% if form %}
                                    {{ form_start(form) }}
                                    {{ form_errors(form) }}

                                    {{ form_end(form) }}
                                {% elseif user %}
                                    <div>
                                        {{ user.username }}
                                    </div>
                                {% else %}
                                    <pre>Deze gebruiker bestaat niet.</pre>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
